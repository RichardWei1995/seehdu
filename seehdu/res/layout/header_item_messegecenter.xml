<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#A2B5CD"
    android:gravity="center_vertical"
    android:padding="3dp" >

    <Button
        android:id="@+id/btn_messege_back"
        style="?android:attr/buttonStyleSmall"
          android:layout_width="30dp"
        android:layout_height="35dp"
        android:background="@drawable/button_selector_back" />

    <TextView
        android:id="@+id/tv_messege_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_messege_back"
        android:layout_toRightOf="@+id/btn_messege_back"
        android:text="@string/messegecenter"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:typeface="monospace" />

</RelativeLayout>