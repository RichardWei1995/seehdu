<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scrollbars="" >

        <LinearLayout
            android:id="@+id/re_loveitem_wall"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp" >

                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/img_loveitem" >

                    <Button
                        android:id="@+id/btn_loveitem_back"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_n" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/btn_loveitem_back"
                        android:layout_alignBottom="@+id/btn_loveitem_back"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="38dp"
                        android:padding="5dp"
                        android:text="@string/love_item_title"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:typeface="monospace" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_loveitem"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/shadow_loveitm" >

                    <TextView
                        android:id="@+id/tv_loveitem_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Rose"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tx_loveitem_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_loveitem_from"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_loveitem_to"
                        android:layout_margin="5dp"
                        android:text="情书内容"
                        android:padding="8dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tv_loveitem_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tx_loveitem_text"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="jack"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_loveitem_wall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shadow_loveitm"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_loveitem_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="情书回复" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/shap_login"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ed_loveitem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:hint="内容" />

        <TextView
            android:id="@+id/tv_loveitem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="right|center_vertical"
            android:text="回复" />
    </LinearLayout>

</RelativeLayout>