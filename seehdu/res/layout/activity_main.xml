<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity1" >

    <com.jw.base.ElasticScrollView
        android:id="@+id/main_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_main_userphoto"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:clickable="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_seehdu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="5dip" >

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:contentDescription="@null"
                    android:src="@drawable/login_icon_name" />

                <EditText
                    android:id="@+id/mine_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="用户名"
                    android:textColor="@color/login"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tx_main_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dip"
                    android:text="编辑" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="5dip" >

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:contentDescription="@null"
                    android:src="@drawable/login_icon_stunum" />

                <EditText
                    android:id="@+id/ed_college"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="#ffffff"
                    android:text="学院"
                    android:textColor="@color/login"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="5dip" >

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:contentDescription="@null"
                    android:src="@drawable/img_dormitory" />

                <EditText
                    android:id="@+id/ed_dormitory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="#ffffff"
                    android:text="寝室号"
                    android:textColor="@color/login"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="5dip" >

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:contentDescription="@null"
                    android:src="@drawable/login_icon_tel" />

                <EditText
                    android:id="@+id/ed_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:background="#ffffff"
                    android:text="tel"
                    android:textColor="@color/login"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/base_horization_line" />

            <!-- 软件相关 -->

            <LinearLayout
                android:id="@+id/soft_relate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/linearlayout_selsector"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件相关"
                    android:textColor="@color/login"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/base_horization_line" />

            <!-- 设置 -->

            <LinearLayout
                android:id="@+id/soft_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/linearlayout_selsector"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/login"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/base_horization_line" />

            <!-- 退出当前账号 -->

            <LinearLayout
                android:id="@+id/move_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/linearlayout_selsector"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出当前账号"
                    android:textColor="@color/login"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </com.jw.base.ElasticScrollView>

    <!-- 更多界面 -->

    <LinearLayout
        android:id="@+id/lin_main_content"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4caf50" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4caf50"
            android:padding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/slidemunue"
                    android:layout_width="28dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dip"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:src="@drawable/slide_menu" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="0.99"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/btn_home_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector_more"
                    android:clickable="true" />
            </LinearLayout>
        </RelativeLayout>

        <com.jw.base.MyViewPager
            android:id="@+id/myiewpager "
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.jw.base.MyViewPager>
    </LinearLayout>

</LinearLayout>