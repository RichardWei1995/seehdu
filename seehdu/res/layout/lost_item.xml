<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ln_lost_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_new_found"
        android:orientation="vertical"
        android:layout_margin="10dip"
        android:padding="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 标题 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_lostitem_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="丢失"
                        android:textColor="#ffcc00"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="来自"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/fromuser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center"
                        android:text="杭电"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_lostitem_ds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="丢失信息"
                 android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                 android:textColor="#ffffff"
                android:text="联系方式：" />

            <TextView
                android:id="@+id/tv_lostitem_con"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.43"
                android:textSize="12sp"
                 android:textColor="#ffffff"
                android:text="15988818786" />

            <TextView
                android:id="@+id/tv_lostitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.4.13"
                android:textSize="12sp"
                 android:textColor="#ffffff"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>